<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EatingActivities.AddEatingActivity"
    android:background="@color/white">
    <TextView
        android:id="@+id/profileName"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:text="Профиль"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="22dp"

        />
    <View
        android:id="@+id/grayline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/profileName"
        android:background="@color/gray"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/roghtGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp"/>

    <TextView
        android:id="@+id/nameFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Логин"
        app:layout_constraintStart_toStartOf="@id/leftGuideline"
        app:layout_constraintTop_toBottomOf="@id/grayline"
        android:layout_marginTop="54dp"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:text="Почта пользователя"
        app:layout_constraintBaseline_toBaselineOf="@id/nameFood"
        app:layout_constraintEnd_toEndOf="@id/roghtGuideline"
        app:layout_constraintStart_toEndOf="@id/nameFood"
        tools:ignore="TouchTargetSizeCheck" />




    <TextView
        android:id="@+id/statFK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Статистика тренировок"
        app:layout_constraintStart_toStartOf="@id/leftGuideline"
        app:layout_constraintTop_toBottomOf="@id/nameFood"
        android:textSize="16dp"
        android:layout_marginTop="42dp"
        />

    <TextView
        android:id="@+id/statFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Статистика Питания"
        app:layout_constraintStart_toStartOf="@id/leftGuideline"
        app:layout_constraintTop_toBottomOf="@id/statFK"
        android:textSize="16dp"
        android:layout_marginTop="42dp"
        />
    <TextView
        android:id="@+id/management"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Управление"
        app:layout_constraintStart_toStartOf="@id/leftGuideline"
        app:layout_constraintTop_toBottomOf="@id/statFood"
        android:textSize="16dp"
        android:layout_marginTop="42dp"
        />
    <TextView
        android:id="@+id/profileHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Рост"
        app:layout_constraintStart_toStartOf="@id/leftGuideline"
        app:layout_constraintTop_toBottomOf="@id/management"
        android:textSize="16dp"
        android:layout_marginTop="42dp"
        />
    <TextView
        android:id="@+id/profileHeightEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Укажите рост"

        app:layout_constraintStart_toStartOf="@id/textBarrier"
        app:layout_constraintTop_toBottomOf="@id/management"
        app:layout_constraintEnd_toStartOf="@id/roghtGuideline"
        android:textSize="16dp"
        android:layout_marginTop="42dp"
        android:gravity="end"
        />
    <TextView
        android:id="@+id/profileWidth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вес"
        app:layout_constraintStart_toStartOf="@id/leftGuideline"
        app:layout_constraintTop_toBottomOf="@id/profileHeight"
        android:textSize="16dp"
        android:layout_marginTop="42dp"
        />
    <TextView
        android:id="@+id/profileWidthEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Укажите вес"

        app:layout_constraintStart_toStartOf="@id/textBarrier"
        app:layout_constraintTop_toBottomOf="@id/profileHeight"
        app:layout_constraintEnd_toStartOf="@id/roghtGuideline"
        android:textSize="16dp"
        android:layout_marginTop="42dp"
        android:gravity="end"
        />




    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/textBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="statFood,statFK"
        app:barrierDirection="end"
        />





    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottomGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="56dp"/>
    <View
        android:id="@+id/grayline2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/bottomGuideline"
        android:background="@color/gray"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <Button
            android:id="@+id/buttonFood"
            style="@style/NavigationButtomButton"


            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/buttonFK"
            android:text="Еда"
            app:icon="@drawable/baseline_fastfood_24"



            tools:ignore="TextSizeCheck"
            />


        <Button
            android:id="@+id/buttonFK"
            style="@style/NavigationButtomButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/buttonFood"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/buttonGallery"
            app:layout_constraintTop_toTopOf="@id/buttonFood"


            android:text="Активность"
            android:singleLine="true"
            app:icon="@drawable/baseline_fitness_center_24"
            tools:ignore="TextSizeCheck" />


        <Button
            android:id="@+id/buttonGallery"
            style="@style/NavigationButtomButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/buttonFK"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/buttonLK"
            android:text="Галерея"

            app:icon="@drawable/baseline_insert_photo_24"
            tools:ignore="TextSizeCheck" />


        <Button
            android:id="@+id/buttonLK"
            style="@style/NavigationButtomButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/buttonGallery"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Профиль"
            app:icon="@drawable/baseline_person_24"
            tools:ignore="TextSizeCheck"
            app:iconTint="@color/red62"
            android:textStyle="bold"
            android:textColor="@color/red62"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>