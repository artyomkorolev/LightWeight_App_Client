<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEatingActivity"
    android:background="@color/white">
    <Button
        android:id="@+id/backbutton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/BackButtonStyle"
        android:text="Личный кабинет"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:gravity="bottom"
        />
    <View
        android:id="@+id/grayline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/backbutton"
        android:background="@color/gray"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/roghtGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp"/>

    <TextView
        android:id="@+id/editFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Редактировать список своих продуктов"
        app:layout_constraintStart_toStartOf="@id/leftGuideline"
        app:layout_constraintTop_toBottomOf="@id/grayline"
        android:layout_marginTop="54dp"
        android:textSize="16dp"/>


    <TextView
        android:id="@+id/editExercize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Редактировать список своих упражнений"
        app:layout_constraintStart_toStartOf="@id/leftGuideline"
        app:layout_constraintTop_toBottomOf="@id/editFood"
        android:textSize="16dp"
        android:layout_marginTop="42dp"
        />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottomGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="56dp"/>
    <View
        android:id="@+id/grayline2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/bottomGuideline"
        android:background="@color/gray"/>





</androidx.constraintlayout.widget.ConstraintLayout>